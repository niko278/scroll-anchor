{
  "name": "Scroll Anchor",
  "description": "Remember scroll position and restore it at anytime",
  "homepage_url": "https://github.com/niko278/scroll-anchor",
  "author": "Dominik GÅ‚odek",
  "version": "1.0",
  "minimum_chrome_version": "55.0",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon-19.png"
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources" : [
    "icons/icon-16.png"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.js"
      ]
    }
  ]
}